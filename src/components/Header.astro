---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE_LOGO } from "../consts";
const { forcehidden="" } = Astro.props;
---
  <header class={"m-0 px-[1em] bg-neutral text-white shadow-md " + forcehidden}>
  <nav class="bg-black h-fit">
    <nav class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
      <a href="/" class="flex items-center">
          <img src="/src/svg/Icon-36-36.svg" width="64px" height="64px" class="mr-3" alt="Logo" />
          <span class="self-center text-2xl font-semibold whitespace-nowrap text-white">{SITE_TITLE_LOGO}</span>
      </a>
      <button id="navbar-toggler" data-collapse-toggle="navbar-default" type="button"
         class="bg-white inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg lg:hidden" aria-controls="navbar-default" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="black" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
      </button>
      <div class="hidden w-full lg:block lg:w-auto" id="navbar-default">
        <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 rounded-lg bg-neutral md:flex-row md:space-x-8 md:mt-0 md:border-0">
          <li>
            <HeaderLink
            href="/"
            class="py-[1em] px-[0.5em] text-white inline-block text-decoration-none"
            >
            Home
            </HeaderLink>
          </li>
          <li>
            <HeaderLink
            href="/blog"
            class="py-[1em] px-[0.5em] text-white inline-block text-decoration-none"
            >
            Blog
            </HeaderLink>
          </li>
          <li id="btn-formation">
            <HeaderLink
            href="/formation"
            class="py-[1em] px-[0.5em] text-white inline-block text-decoration-none"
            >
            Formation
            </HeaderLink>
          </li>
          <li id="btn-formation-pro" class="hidden">
            <HeaderLink
            href="/formation-pro"
            class="py-[1em] px-[0.5em] text-white inline-block text-decoration-none"
            >
            Formation
            </HeaderLink>
          </li>
          <li id="btn-login" class="block">
            <button  type="button" class="py-[1em] px-[0.5em] text-white text-decoration-none" >Connexion</button>
          </li>
          <li id="btn-Signup" class="block">
            <button  type="button" class="py-[1em] px-[0.5em] text-white text-decoration-none" >Signup</button>
          </li>
          <li id="btn-Logout" class="block">
            <button  type="button" class="py-[1em] px-[0.5em] text-white text-decoration-none ">Logout</button>
          </li>
          <li id="btn-Account" class="block">
            <HeaderLink
            href="/account"
            class="py-[1em] px-[0.5em] text-white inline-block text-decoration-none"
            >
            Account
            </HeaderLink>
          </li>
        </ul> 
      </div>
    </nav>
  </nav>
</header>
